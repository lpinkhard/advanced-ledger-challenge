{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/api/health"
    }
  ],
  "crons": [
    {
      "path": "/api/outbox/process",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "MONGODB_URI": "@ledger-mongodb-uri",
    "DB_NAME": "ledger",
    "API_KEY": "@ledger-api-key",
    "OUTBOX_TARGET": "https://advanced-ledger-challenge.vercel.app/api/events",
    "OUTBOX_TIMEOUT_MS": "5000"
  }
}
